{
  "name": "brainbytes-incident-simulator",
  "version": "1.0.0",
  "description": "Simple incident simulation system for BrainBytes monitoring",
  "main": "incident-simulator.js",
  "scripts": {
    "start": "node incident-simulator.js",
    "status": "node incident-simulator.js status",
    "trigger:cpu": "node incident-simulator.js trigger HIGH_CPU",
    "trigger:errors": "node incident-simulator.js trigger HIGH_ERROR_RATE",
    "trigger:memory": "node incident-simulator.js trigger CONTAINER_MEMORY",
    "trigger:ai": "node incident-simulator.js trigger AI_SERVICE_SLOW",
    "trigger:mobile": "node incident-simulator.js trigger MOBILE_CONNECTIVITY",
    "resolve:all": "node incident-simulator.js resolve-all"
  },
  "dependencies": {
    "axios": "^1.6.0"
  },
  "keywords": [
    "monitoring",
    "incident",
    "simulation",
    "prometheus",
    "cadvisor",
    "alerting"
  ],
  "author": "BrainBytes Team",
  "license": "MIT"
}